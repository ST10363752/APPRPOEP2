@{
    ViewData["Title"] = "Home";
}

<div class="hero-section bg-success text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Disaster Alleviation Foundation</h1>
                <p class="lead">Providing immediate relief and support to communities affected by natural disasters and emergencies.</p>
                <div class="mt-4">
                    <a href="@Url.Action("Donate", "Donation")" class="btn btn-warning btn-lg me-3">Get Involved</a>
                    <a href="@Url.Action("About", "Home")" class="btn btn-outline-light btn-lg">Learn More</a>
                </div>
            </div>
            
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Features Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="section-title">How You Can Help</h2>
            <p class="text-muted">Join us in making a difference during times of crisis</p>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 text-center border-warning">
                <div class="card-body">
                    <div class="feature-icon mb-3 text-warning">
                        <h1>⚠️</h1>
                    </div>
                    <h5 class="card-title text-success">Report Incidents</h5>
                    <p class="card-text">Help us identify disaster-affected areas by reporting incidents in your community.</p>
                    <a href="@Url.Action("Report", "Disaster")" class="btn btn-outline-success">Report Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 text-center border-success">
                <div class="card-body">
                    <div class="feature-icon mb-3 text-success">
                        <h1>❤️</h1>
                    </div>
                    <h5 class="card-title text-success">Donate Resources</h5>
                    <p class="card-text">Contribute essential supplies like food, clothing, and medical equipment.</p>
                    <a href="@Url.Action("Donate", "Donation")" class="btn btn-outline-success">Donate Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 text-center border-warning">
                <div class="card-body">
                    <div class="feature-icon mb-3 text-warning">
                        <h1>🤝</h1>
                    </div>
                    <h5 class="card-title text-success">Volunteer</h5>
                    <p class="card-text">Join our team of dedicated volunteers and help with relief efforts.</p>
                    <a href="@Url.Action("Register", "Volunteer")" class="btn btn-outline-success">Volunteer Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 text-center border-success">
                <div class="card-body">
                    <div class="feature-icon mb-3 text-success">
                        <h1>📊</h1>
                    </div>
                    <h5 class="card-title text-success">Track Impact</h5>
                    <p class="card-text">Monitor how your contributions are making a difference in communities.</p>
                    <a href="@Url.Action("Impact", "Donation")" class="btn btn-outline-success">View Impact</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="section-title">Our Impact</h2>
        </div>
        <div class="col-md-3 text-center mb-3">
            <div class="stat-number text-success fw-bold display-6">150+</div>
            <div class="stat-label">Disasters Responded</div>
        </div>
        <div class="col-md-3 text-center mb-3">
            <div class="stat-number text-warning fw-bold display-6">5,000+</div>
            <div class="stat-label">Volunteers</div>
        </div>
        <div class="col-md-3 text-center mb-3">
            <div class="stat-number text-success fw-bold display-6">$2M+</div>
            <div class="stat-label">Resources Donated</div>
        </div>
        <div class="col-md-3 text-center mb-3">
            <div class="stat-number text-warning fw-bold display-6">50+</div>
            <div class="stat-label">Countries Reached</div>
        </div>
    </div>

    <!-- Emergency Alert -->
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">🚨 Emergency Hotline</h4>
        <p class="mb-0">If you are in immediate danger, please contact emergency services first. Call: <strong class="text-success">1-800-DISASTER</strong></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>

    <!-- Call to Action -->
    <div class="row mt-5">
        <div class="col-12 text-center">
            <div class="bg-light p-5 rounded">
                <h3 class="text-success mb-3">Ready to Make a Difference?</h3>
                <p class="text-muted mb-4">Join thousands of others who are helping communities in need.</p>
                <a href="@Url.Action("Donate", "Donation")" class="btn btn-success btn-lg me-3">Join Now</a>
                <a href="@Url.Action("About", "Home")" class="btn btn-outline-warning btn-lg">Learn More</a>
            </div>
        </div>
    </div>
</div>